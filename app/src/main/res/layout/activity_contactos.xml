<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:background="#FAFAFA">

    <!-- Contenedor del contacto -->
    <LinearLayout
        android:id="@+id/layoutContacto"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/ivFotoContacto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@android:drawable/sym_def_app_icon"
            android:layout_marginBottom="15dp"
            android:contentDescription="Foto contacto" />

        <TextView
            android:id="@+id/tvNombreContacto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No se ha seleccionado ningún contacto"
            android:textSize="18sp"
            android:textColor="#333"
            android:layout_marginBottom="20dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btnLlamar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Llamar"
                android:layout_marginEnd="10dp" />

            <Button
                android:id="@+id/btnMensaje"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mensaje" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botón + en esquina inferior derecha -->
    <ImageButton
        android:id="@+id/btnAgregar"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/bg_boton_agregar"
        android:src="@android:drawable/ic_input_add"
        android:contentDescription="Agregar contacto"
        android:padding="15dp"
        android:elevation="6dp" />

</RelativeLayout>